/* pages/userLogin/userLogin.wxss */

.text_title{
  padding-top: 190rpx; 
  text-align: center;
  font-size: 24px;
  padding-bottom: 30rpx;
}

.wx_login_bt{
  margin-top: 30rpx;
  width: 380rpx;
  height: 110rpx;
  background-color:#00AE66;
  color: white;
  border-radius: 3px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
}

.background{
  height: 100%;
  width: 100%;
  background-color: white;
}

.wxIcon{
  align-self: center;              
  width: 25px;
  height: 25px;
  margin-right: 10px;
}

.content{
  display:flex;    
  flex-direction:row;             
  justify-content: center; 
}

.wx_button_text {
  font-size: 14px;
}

.popup {
  position: fixed;  
  z-index: 999;  
  background: rgba(51, 51, 51, 0.2);
  width: 100%;  
  height: 100%;  
  top: 0px;
  left: 0px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.popup > .content {
  width: 610rpx;
  height: auto;
  padding: 30rpx;
  margin: auto;
  background: white;
  border-radius: 10px;
  box-shadow: 0px 2px 10px 0px #BBBBBB;
  overflow: hidden;
  display: block;
}

.popup > .content > image {
  width: 100rpx;
  height: 100rpx;
  display: block;
  margin: 20rpx auto 50rpx;
}

.popup > .content > .title {
  display: block;
  margin-left: 33rpx;
  font-size: 18px;
  color: #353535;
  font-weight: 700;
}


.popup > .content > .subtitle {
  display: block;
  margin-left: 33rpx;
  font-size: 14px;
  color: #BBBBBB;
  margin-top: 50rpx;
}

.popup > .content > .button {
  width: 268rpx;
  height: 68rpx;
  line-height: 48rpx;
  padding: 9rpx;
  background-color: white;
  border: 1px solid #FFBE67;
  border-radius: 34rpx;
  font-size: 14px;
  color: #F6B85A;
  margin: 60rpx auto 0;
}


