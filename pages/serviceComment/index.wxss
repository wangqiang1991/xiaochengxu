/* pages/serviceComment/index.wxss */

page {
  background: #eee;
}

.content {
  width: 100%;
  height: auto;
  padding-bottom: 30rpx;
}

.messageBox {
  margin: 30rpx auto;
  width: 690rpx;
  box-shadow: 0 1px 4px 0 #cacaca;
  border-radius: 5px;
  background: white;
  position: relative;
}

.messageBox > .top {
  height: 100rpx;
  width: 630rpx;
  border-bottom: 1px #cacaca solid;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  font-size: 12px;
}

.messageBox > .mcontent {
  font-size: 12px;
  padding-left: 30rpx;
  width: 660rpx;
  margin-top: 30rpx;
}

.messageBox > .mcontent > textarea {
  padding-top: 25rpx;
  height: 150rpx;
  width: 630rpx;
}

.btn {
  width: 630rpx;
  background: #ff9800;
  color: white;
  font-size: 14px;
  border-radius: 0px;
  height: 90rpx;
  margin-top: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 60rpx;
  box-shadow: 1px 1px 4px 1px #cacaca;
  position: fixed;
  bottom: 40rpx;
}

.imageBox {
  display: block;
  overflow: hidden;
  padding-bottom: 30rpx;
}
.imageBox .zoomBox{
  width: 142.5rpx;
  height: 142.5rpx;
  display: block;
  float: left;
  margin-right: 20rpx;
  
} 
.zoomImage{
    width:100%;
    height:0;
    padding-bottom: 100%;
    overflow:hidden;
    background-position: center center;
    background-repeat: no-repeat;
    -webkit-background-size:cover;
    -moz-background-size:cover;
    background-size:cover;
}

.imageBox view {
  width: 142.5rpx;
  height: 142.5rpx;
  padding-top: 20rpx;
  float: left;
  margin-right: 20rpx;  
  position: relative
}

.imageBox view.chocieImageBox {
  margin-right: 0rpx;
  border: 1px #eee dashed;
}

.imageBox image{
  display: block;
  width: 142.5rpx;
  height: 142.5rpx;
}
.imageBox image.close{
  position: absolute;
  top: 0; right: 0;
  width: 40rpx; height: 40rpx;
}