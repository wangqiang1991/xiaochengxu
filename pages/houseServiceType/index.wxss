/* pages/houseServiceType/index.wxss */
page{
  background: #eee;
}
.content{
  width: 100%;
  height: auto;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.houseTypeItem{
  width: 690rpx;
  height: auto;
  box-shadow: 0 1px 4px 0 #cacaca;
  border-radius: 5px;
  background: white;
  margin: auto;
}
.item{
  width: 630rpx;
  padding:20rpx 30rpx;
  height: auto;
  border-bottom: 1px solid #eee;
  display: block;
  font-size: 16px;
  color: #343434;
  position: relative;
}
.item:last-child{
  border-bottom: none;
}
.title{
  display: block;
  color: #343434;
  font-size: 14px;
  width: 580rpx;
}
.item text.choiceTitle{
  color: #ff9800
}
.item image {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  display: block;
  width: 21px;
  height: 16px;
}
.desc{
  width: 580rpx;
}
.desc>text{
  font-size: 14px;
  color: #999;
}