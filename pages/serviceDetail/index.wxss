/* pages/serviceDetail/index.wxss */

page {
  background: #eee;
}

.content {
  width: 100%;
  height: auto;
}

.content-bottom-def {
  padding-bottom: 30rpx;
}

.content-bottom-show {
  padding-bottom: 130rpx;
}

.title {
  width: 100%;
  display: block;
  text-align: center;
  margin: 40rpx 0;
  font-weight: 700;
  color: #000;
  font-size: 18px;
}

.messageBox {
  width: 630rpx;
  padding: 30rpx;
  margin: auto;
  box-shadow: 0 1px 4px 0 #cacaca;
  border-radius: 5px;
  background: white;
  position: relative;
}

.serviceImageBox{
  width: 630rpx;
  padding: 30rpx;
  margin: auto;
  box-shadow: 0 1px 4px 0 #cacaca;
  border-radius: 5px;
  background: white;
}
.serviceImageBox>text{
  font-size: 14px;
  color: #666;
  display: block;
  margin-bottom: 20rpx;
}

.serviceImageBox>view image{

  margin: 0 10rpx 10rpx 0;
  width: 150rpx;
  height: 150rpx;

}
.serviceImageBox>view image:nth-child(4n){
  margin-right:0; 
}

.serviceTitle {
  font-size: 16px;
  font-weight: 600;
  color: #343434;
  margin-bottom: 20rpx;
  display: block;
}

.boxItem {
  margin-bottom: 20rpx;
  font-size: 12px;
  color: #666;
}

.boxItem>text {
  margin-left: 20rpx;
  color: #aaa;
}

.boxItem>text.type {
  margin-left: 20rpx;
  color: #666;
}

.messageBox1 {
  width: 630rpx;
  padding: 30rpx;
  margin: auto;
  box-shadow: 0 1px 4px 0 #cacaca;
  border-radius: 5px;
  background: white;
  position: relative;
}

.messageBox1>view {
  display: flex;
  height: 60rpx;
  align-items: center;
  font-size: 14px;
}

.messageBox1>view image {
  width: 60rpx;
  height: 60rpx;
  display: block;
  margin-left: 20rpx;
}

view.name {
  font-size: 16px;
  font-weight: 700;
}

view.score {
  font-size: 11px;
}

view.phone {
  font-size: 13px;
}

.messageBox1>view.score image {
  margin-left: 0;
  margin-right: 10rpx;
  width: 40rpx;
  height: 40rpx;
}

.messageBox1>view.phone image {
  margin-left: 10rpx;
  width: 45rpx;
  height: 45rpx;
}

.userImage {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  display: block;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}

.messageBox2 {
  width: 630rpx;
  padding: 30rpx;
  margin: auto;
  box-shadow: 0 1px 4px 0 #cacaca;
  border-radius: 5px;
  background: white;
  position: relative;
}

.myScore {
  margin-bottom: 20rpx;
}

.messageBox2>view.myScore image {
  width: 50rpx;
  height: 50rpx;
  margin-left: 0;
  margin-right: 16rpx;
}

.myMessage {
  display: block;
  font-size: 14px;
  color: #343434;
}

.next {
  width: 690rpx;
  background: #ff9800;
  color: white;
  font-size: 14px;
  border-radius: 0px;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: auto;
  box-shadow: 1px 1px 4px 1px #cacaca;
  position: fixed;
  left: 30rpx;
  bottom: 30rpx;
}

.next > image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.imageBox {
  padding-top: 30rpx;
  display: block;
  overflow: hidden;
  padding-bottom: 30rpx;
}

.imageBox .zoomBox {
  width: 142.5rpx;
  height: 142.5rpx;
  display: block;
  float: left;
  margin-right: 20rpx;
}

.zoomImage {
  width: 100%;
  height: 0;
  padding-bottom: 100%;
  overflow: hidden;
  background-position: center center;
  background-repeat: no-repeat;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  background-size: cover;
}

.imageBox image {
  width: 142.5rpx;
  height: 142.5rpx;
  display: block;
  float: left;
  margin-right: 20rpx;
  object-fit: cover;
}

.bottom {
  height: 130rpx;
  width: 100%;
  background-color: #eee;
  position: fixed;
  bottom: 0px;
  left: 0px;
}
