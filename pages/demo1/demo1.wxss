.main{
  width: 700rpx;
  display: block;
  text-align: center;
  margin: auto;
}
.show{
  width: 100%;
  height: 60rpx;
  text-align: right;
  font-size: 40rpx;
  line-height: 60rpx;
  color: red;
  border: 1px solid black;
  margin-bottom: 20rpx;
}
.answer{
  overflow: hidden;
}
.rest{
  width: 30%;
  float: left;
  overflow: hidden;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 30rpx;
  color: blue;
  background: #f5f5f5;
}
.return{
  width: 60%;
  height: 50rpx;
  border: 1px solid black;
  float: right;
  text-align: right;
  color: green;
  line-height: 50rpx;
}
.number{
  display: block;
  width: 75%;
  float: left;
  overflow: hidden;
  margin-top: 20rpx;
}
.number>text{
  width: 25%;
  padding-left: 1.5%;
  margin: 10rpx;
  padding-right: 1.5%;
  display: block;
  float: left;
  border: 1px solid black;
}
#eq{
  width: 57%;
}
.operat{
  width: 20%;
  display: block;
  float: right;
  margin-top: 20rpx;
  overflow: hidden;
}
.operat>text{
  widows: 100%;
  display: block;
  border: 1px solid black;
  margin: 15rpx;
}