  </view>

    <view class='item'>
    <text>休闲室</text>
    <view class='operation'>
      <view bindtap='sublou'>-</view>
      <text>{{loungeRoom}}</text>
      <view bindtap='addlou'>+</view>
    </view>
  </view>

    <view class='item'>
    <text>花园</text>
    <view class='operation'>
      <view bindtap='subgar'>-</view>
      <text>{{garden}}</text>
      <view bindtap='addgar'>+</view>
    </view>
  </view>
</view>

<view style='width:750rpx;height:180rpx;'></view>

<button class='sure' bindtap='subHouseSize'>确定</button>